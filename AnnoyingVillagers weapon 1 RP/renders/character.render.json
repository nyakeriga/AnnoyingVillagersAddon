{
  "format_version": "1.10.0",

    "render_controllers": {
        "controller.render.character": {
            "geometry": "Geometry.default",
            "materials": [ { "*": "Material.default" } ],
            "textures": [
                "Texture.default"
            ]
        },
        "controller.render.ac_bow": {
            "geometry": "Geometry.ac_bow",
            "materials": [ { "*": "Material.default" } ],
            "textures": [ "Texture.ac_bow" ],
            "part_visibility": [

                { "bow": "query.has_target && !query.is_stunned" }

            ]
        },
        "controller.render.ac_mirror_light": {
            "geometry": "Geometry.light",
            "materials": [ { "*": "Material.light" } ],
            "textures": [ "Texture.light" ],
            "light_color_multiplier": 1.3,
            "ignore_lighting": true
        }
    }
}


    
