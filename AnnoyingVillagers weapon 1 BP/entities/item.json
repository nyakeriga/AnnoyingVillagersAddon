{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:item",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false,
      "scripts": {
        "animate": [
          "3d_item"
        ]
      },
      "animations": {
        "3d_item": "controller.animation.netherite_pro"
      }
    },
    "component_groups": {
      "netherite_fire": {
        "minecraft:mark_variant": {
          "value": 1
        },
        "minecraft:addrider": {
          "spawn_event": "heavy:pure_netherite_ingot"
        },
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "cause": "fire",
              "deals_damage": false
            },
            {
              "cause": "fire_tick",
              "deals_damage": false
            },
            {
              "cause": "lava",
              "deals_damage": false
            }
          ]
        }
      }
    },
    "components": {
      "minecraft:rideable": {
        "seat_count": 1,
        "family_types": [
          "3ditem"
        ],
        "seats": {
          "position": [ 0.0, 0.0, 0.0 ]
        }
      },
      "minecraft:environment_sensor": {
        "triggers": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "has_tag",
                  "operator": "==",
                  "value": "pure_netherite_ingot"
                },
                {
                  "test": "is_mark_variant",
                  "operator": "!=",
                  "value": 1
                }
              ]
            },
            "event": "pure_netherite_fire"
          }
        ]
      }
    },
    "events": {
      "pure_netherite_fire": {
        "add": {
          "component_groups": [
            "netherite_fire"
          ]
        }
      }
    }
  }
}